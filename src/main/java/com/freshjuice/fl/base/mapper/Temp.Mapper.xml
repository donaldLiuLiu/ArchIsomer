<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.freshjuice.fl.base.mapper.TempMapper">


    <select id="selectListAll" resultType="com.freshjuice.fl.base.entity.Temp">
        select * from temp
    </select>

    <select id="selectMany" resultType="com.freshjuice.fl.base.entity.Temp">
        select id, temp_name tempName, temp_num tempNum
        from temp
        where 1=1
        <if test="tempName != null and tempName != ''">
           and temp_name = #{tempName}
        </if>
        <if test="tempIds != null and tempIds.size() > 0">
            and id in
            <foreach collection="tempIds" index="index" item="item" open="(" close=")" separator=",">
                #{item}
            </foreach>
        </if>
    </select>

    <select id="selectByIds" resultType="com.freshjuice.fl.base.entity.Temp">
        select * from temp where 1=1
        <if test="ids != null and ids.size() > 0">
            and id in
            <foreach collection="ids" index="index" item="item" open="(" close=")" separator=",">
                #{item}
            </foreach>
        </if>
    </select>

</mapper>
