<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.freshjuice.fl.base.mapper.TempMapper">

    <insert id="insertTemp" parameterType="temp">
        insert into temp(id,delete_flag
          <if test="tempName != null and tempName != ''">,temp_name</if>
          <if test="tempNum != null">,temp_num</if>
          <if test="tempDt != null and tempDt != ''">,temp_dt</if>
          <if test="tempD != null and tempD != ''">,temp_d</if>
          <if test="tempT != null and tempT != ''">,temp_t</if>
        ) values(#{id},0
            <if test="tempName != null and tempName != ''">,#{tempName}</if>
            <if test="tempNum != null">,#{tempNum}</if>
            <if test="tempDt != null and tempDt != ''">,#{tempDt}</if>
            <if test="tempD != null and tempD != ''">,#{tempD}</if>
            <if test="tempT != null and tempT != ''">,#{tempT}</if>
        )
    </insert>

    <delete id="deleteTempById" parameterType="java.lang.Long">
        update temp set delete_flag=1 where id=#{value, jdbcType=BIGINT}
    </delete>

    <update id="updateTemp" parameterType="temp">
        update temp set delete_flag=0
            <if test="tempName != null and tempName != ''">,temp_name=#{tempName}</if>
            <if test="tempNum != null">,temp_num=#{tempNum}</if>
            <if test="tempDt != null and tempDt != ''">,temp_dt=#{tempDt}</if>
            <if test="tempD != null and tempD != ''">,temp_d=#{tempD}</if>
            <if test="tempT != null and tempT != ''">,temp_t=#{tempT}</if>
        where id = #{id, jdbcType=BIGINT}
    </update>


    <select id="selectTempById" parameterType="java.lang.Long" resultType="temp">
      select id, temp_name as TempName, temp_num as tempNum, temp_dt as TempDt, temp_d as tempD, temp_t as tempT, delete_flag as deleteFlag, create_time as createTime, update_time as UpdateTime
      from temp where id = #{value, jdbcType=BIGINT}
    </select>

</mapper>