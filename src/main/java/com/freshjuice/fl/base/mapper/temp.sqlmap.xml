<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.freshjuice.fl.base.mapper.TempMapper">

    <insert id="insertTemp" parameterType="temp">
        insert into temp(id,deleteFlag
          <if test="temp_name != null and temp_name != ''">,temp_name</if>
          <if test="temp_num != null">,temp_num</if>
          <if test="temp_dt != null and temp_dt != ''">,temp_dt</if>
          <if test="temp_d != null and temp_d != ''">,temp_d</if>
          <if test="temp_t != null and temp_t != ''">,temp_t</if>
        ) values(#{id},0
            <if test="temp_name != null and temp_name != ''">,#{tempName}</if>
            <if test="temp_num != null">,#{tempNum}</if>
            <if test="temp_dt != null and temp_dt != ''">,#{tempDt}</if>
            <if test="temp_d != null and temp_d != ''">,#{tempD}</if>
            <if test="temp_t != null and temp_t != ''">,#{tempT}</if>
        )
    </insert>

    <delete id="deleteTempById" parameterType="java.lang.Long">
        update temp set deleteFlag=1 where id=#{value, jdbcType=BIGINT}
    </delete>

    <update id="updateTemp" parameterType="temp">
        update temp set deleteFlag=0
            <if test="tempName != null and tempName != ''">,temp_name=#{tempName}</if>
            <if test="tempNum != null">,temp_num=#{tempNum}</if>
            <if test="tempDt != null and tempDt != ''">,temp_dt=#{tempDt}</if>
            <if test="tempD != null and tempD != ''">,temp_d=#{tempD}</if>
            <if test="tempT != null and tempT != ''">,temp_t=#{tempT}</if>
        where id = #{id, jdbcType=BIGINT}
    </update>


    <select id="selectTempById" parameterType="java.lang.Long" resultType="temp">
      select id, temp_name, temp_num, temp_dt, temp_d, temp_t, deleteFlag, createTime, updateTime
      from temp where id = #{value, jdbcType=BIGINT}
    </select>

</mapper>